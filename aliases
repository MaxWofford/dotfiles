# alias aliases
alias ae="$EDITOR ~/.aliases"
alias ar='. ~/.aliases'

# movement aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'

# git aliases
